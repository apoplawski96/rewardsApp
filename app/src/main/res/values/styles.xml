<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/background</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar</item>
    </style>

    <style name="TextAppearance.Toolbar" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/mont_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_100</item>
    </style>

    <style name="AppText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_100</item>
    </style>

    <style name="AppText.Body" />

    <style name="AppText.Body.M">
        <item name="android:textSize">@dimen/text_75</item>
    </style>

    <style name="AppText.Body.M.SemiBold">
        <item name="android:fontFamily">@font/mont_semibold</item>
    </style>

    <style name="AppText.Header"/>

    <style name="AppText.Header.M">
        <item name="android:gravity">center</item>
    </style>

    <style name="AppText.Header.L">
        <item name="android:textSize">@dimen/text_150</item>
    </style>

    <style name="AppText.Header.L.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppButton.Text" parent="Widget.MaterialComponents.Button">
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">@dimen/text_100</item>
        <item name="android:textColor">@color/text_primary_reverse</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:paddingStart">@dimen/space_300</item>
        <item name="android:paddingEnd">@dimen/space_300</item>
        <item name="android:background">@drawable/background_reward_activated</item>
        <item name="fontFamily">@font/mont_semibold</item>
        <item name="rippleColor">@color/background</item>
        <item name="cornerRadius">@dimen/corners_100</item>
    </style>

    <style name="AppButton.Text.Icon">
        <item name="android:paddingStart">@dimen/space_100</item>
        <item name="android:paddingEnd">@dimen/space_100</item>
        <item name="android:textSize">@dimen/text_75</item>
        <item name="iconSize">@dimen/icon_60</item>
        <item name="iconTint">@color/icon_text_btn</item>
        <item name="iconGravity">textStart</item>
    </style>

</resources>