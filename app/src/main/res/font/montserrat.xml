<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- regular -->
    <font
        android:font="@font/mont_regular"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/mont_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- semibold -->
    <font
        android:font="@font/mont_semibold"
        android:fontStyle="normal"
        android:fontWeight="600"

        app:font="@font/mont_semibold"
        app:fontStyle="normal"
        app:fontWeight="600" />

    <!-- bold -->
    <font
        android:font="@font/mont_bold"
        android:fontStyle="normal"
        android:fontWeight="700"

        app:font="@font/mont_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

</font-family>